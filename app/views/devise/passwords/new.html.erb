<% content_for :devise_form do %>

  <h2 class="heading text-4xl font-bold pt-4 mb-8">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
    </div>
  <% end %>

  <hr class="border mt-6" />

  <%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_wrap" %>
